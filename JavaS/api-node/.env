# Configuración de conexión a PostgreSQL para la API Node.js
DB_HOST=127.0.0.1           # Dirección IP del servidor PostgreSQL (localhost)
DB_PORT=5432                # Puerto de conexión a PostgreSQL (puerto estándar)
DB_DATABASE=Compareware     # Nombre de la base de datos del proyecto
DB_USERNAME=postgres        # Usuario con permisos para operaciones CRUD
DB_PASSWORD=123456789       # Contraseña del usuario de la base de datos

# Configuración de autenticación JWT (JSON Web Tokens)
JWT_SECRET=13246587cba      # Clave secreta para firmar y verificar tokens JWT
JWT_REFRESH_SECRET=13246587acb  # Clave secreta para tokens de actualización (refresh tokens)

# Configuración del servidor API
PORT=4000                   # Puerto en el que correrá la API REST de Node.js

# Credenciales fijas para autenticación básica
BASIC_AUTH_USER=admin       # Usuario fijo para autenticación básica
BASIC_AUTH_PASSWORD=123456  # Contraseña fija para autenticación básica